@page "{id?}"
@model WEB_053504_Mazurenko.Areas.Admin.EditModel

@{
    var cakeGroups = ViewData["CakeGroups"] as IEnumerable<CakeGroup>;
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Cake</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cake.Id" />
            <div class="form-group">
                <label asp-for="Cake.Name" class="control-label"></label>
                <input asp-for="Cake.Name" class="form-control" />
                <span asp-validation-for="Cake.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cake.Description" class="control-label"></label>
                <input asp-for="Cake.Description" class="form-control" />
                <span asp-validation-for="Cake.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cake.Price" class="control-label"></label>
                <input asp-for="Cake.Price" class="form-control" />
                <span asp-validation-for="Cake.Price" class="text-danger"></span>
            </div>
            @*<div class="form-floating">
                <label asp-for="Cake.Image"></label>
                <input asp-for="Cake.Image" aria-required="true" type="file" accept="image/png, image/jpeg" />
            </div>*@
            <div class="input-group">
                <input asp-for="Image" type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" accept="image/png, image/jpeg">     
            </div>
            <div class="form-group">
                <label asp-for="Cake.Group" class="control-label"></label>
                <select class="form-select" asp-for="Cake.Group">
                    @foreach(var item in cakeGroups) {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

