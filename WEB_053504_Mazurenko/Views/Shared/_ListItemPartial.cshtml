@model Cake

@{
    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();
}
<div class="col-sm-4">
    <div class="card" style="width: 18rem;">
        <img src="~/Images/@Model.Image" class="card-img-top" alt="@Model.Image">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <h6 class="card-subtitle badge text-dark">Размер формы: @Model.Price руб</h6>
            <a asp-action="Add" asp-controller="Cart" asp-route-id="@Model.Id" asp-route-returnUrl="@returnUrl" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> В корзину</a>
        </div>
    </div>
</div>